import("//build/fidl/fidl.gni")

fidl("fuchsia.fdomain") {
  sdk_area = "Developer"
  sources = [
    "channel.fidl",
    "event.fidl",
    "event_pair.fidl",
    "protocol.fidl",
    "socket.fidl",
  ]
  public_deps = [ "//zircon/vdso/zx" ]
  excluded_checks = [ "vector-bounds-not-specified" ]
  experimental_flags = [
    "allow_arbitrary_error_types",
    "no_resource_attribute",
  ]
}

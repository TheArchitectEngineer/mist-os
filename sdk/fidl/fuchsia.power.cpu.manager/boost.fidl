@available(added=HEAD)
library fuchsia.power.cpu.manager;

type SetBoostError = strict enum : uint32 {
    NOT_SUPPORTED = 0;
    INTERNAL = 1;
};

@discoverable
protocol Boost {
    SetBoost(struct {
        enable bool;
    }) -> () error SetBoostError;

    IsBoostSupported() -> (struct {
        supported bool;
    });
};

import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("user_input_test") {
    main_source = "test_user_input.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    environments = [
      # Only enable for AEMU-x64 as host-tests aren't supported on QEMU-arm64.
      aemu_env,
      vim3_env,
      nuc11_env,
    ]
  }
}

group("test_user_input") {
  testonly = true
  public_deps = [
    ":user_input_test($host_toolchain)",
    "//src/ui/examples:flatland-examples($target_toolchain)",
  ]
}

# Group containing all of the session affordances functional test cases and its dependencies.
group("tests") {
  testonly = true
  public_deps = [ ":test_user_input" ]
}

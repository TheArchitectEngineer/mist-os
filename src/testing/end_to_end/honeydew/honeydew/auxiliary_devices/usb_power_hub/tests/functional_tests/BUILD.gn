import("//build/python/python_mobly_test.gni")
import("//build/testing/environments.gni")

if (is_host) {
  python_mobly_test("test_usb_power_hub_using_dmc") {
    main_source = "test_usb_power_hub_using_dmc.py"
    libraries = [
      "//src/testing/end_to_end/honeydew",
      "//src/testing/end_to_end/mobly_base_tests:fuchsia_base_test",
    ]
    environments = [ sorrel_env ]
  }
}

# Group containing all of the PowerSwitchDmc functional test cases and its dependencies.
group("tests") {
  testonly = true
  public_deps = [ ":test_usb_power_hub_using_dmc($host_toolchain)" ]
}

import("//build/components.gni")
import("//build/rust/rustc_test.gni")

rustc_test("directory_routing_bin") {
  name = "directory_routing"
  edition = "2021"
  source_root = "src/main.rs"
  deps = [
    "//sdk/fidl/fuchsia.io:fuchsia.io_rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-component-test",
    "//src/lib/fuchsia-fs",
    "//src/sys/lib/cm_rust",
    "//src/sys/lib/cm_types",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:rand",
  ]

  sources = [ "src/main.rs" ]
}

fuchsia_test_component("directory_routing") {
  manifest = "meta/directory_routing_test.cml"
  deps = [ ":directory_routing_bin" ]
}

fuchsia_test_package("directory_routing_test") {
  test_components = [ ":directory_routing" ]
  deps = [ "//src/sys/component_manager:component-manager-realm-builder-cmp" ]
}

group("tests") {
  testonly = true

  deps = [ ":directory_routing_test" ]
}

group("storage") {
  deps = [
    "ext4",
    "lib",
  ]
}

group("tests") {
  testonly = true
  deps = [
    "benchmarks:tests",
    "bin:tests",
    "blackout:tests",
    "blobfs:tests",
    "conformance:tests",
    "crypt:tests",
    "ext4:tests",
    "f2fs:tests",
    "factory:tests",
    "fshost:tests",
    "fuchsia-fatfs:tests",
    "fuzzers:tests",
    "fvm:tests",
    "fxfs:tests",
    "gpt:tests",
    "host_fs_test:tests",
    "lib:tests",
    "memfs:tests",
    "minfs:tests",
    "stress-tests",
    "stressor:tests",
    "testing:tests",
    "tools:tests",
    "type-fprint:tests",
    "volume_image:tests",
  ]
}

# a set of storage tools useful for development and debugging
group("tools") {
  deps = [
    "factory/export_ffs:export-ffs",
    "tools",
  ]
}

group("host_tools") {
  deps = [
    "fxfs/tools($host_toolchain)",
    "volume_image/ftl:ftl-volume-extractor-host($host_toolchain)",
    "volume_image/ftl:nandoob-converter-host($host_toolchain)",
  ]
}

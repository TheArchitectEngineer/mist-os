{
    include: [ "syslog/client.shard.cml" ],
    program: {
        runner: "elf",
        binary: "bin/pkg-server",
        lifecycle: { stop_event: "notify" },
    },
    capabilities: [
        {
            // /dev directory is always empty. It's used for device paths that
            // aren't required by the vulkan loader.
            directory: "empty",
            rights: [ "r*" ],
            path: "/dev",
        },
        {
            // TODO(https://fxbug.dev/324273348): Remove this capability once the clients have
            // been migrated to services. The service capability has been added below.
            directory: "dev-gpu",
            rights: [ "r*" ],
            path: "/dev-gpu",
        },
        {
            // This service replaces the directory capability above.
            service: "fuchsia.gpu.magma.Service",
        },
        {
            // TODO(https://fxbug.dev/324273348): Remove this capability once the clients have
            // been migrated to services. The service capability has been added below.
            directory: "dev-goldfish-pipe",
            rights: [ "r*" ],
            path: "/dev-goldfish-pipe",
        },
        {
            // This service replaces the directory capability above.
            service: "fuchsia.hardware.goldfish.ControllerService",
        },
    ],
    expose: [
        {
            // TODO(https://fxbug.dev/324273348): Remove this capability once the clients have
            // been migrated to services. The service capability has been added below.
            directory: "dev-gpu",
            from: "self",
            rights: [ "r*" ],
        },
        {
            // This service replaces the directory capability above.
            service: "fuchsia.gpu.magma.Service",
            from: "self",
        },
        {
            // TODO(https://fxbug.dev/324273348): Remove this capability once the clients have
            // been migrated to services. The service capability has been added below.
            directory: "dev-goldfish-pipe",
            from: "self",
            rights: [ "r*" ],
        },
        {
            // This service replaces the directory capability above.
            service: "fuchsia.hardware.goldfish.ControllerService",
            from: "self",
        },
        {
            directory: "empty",
            from: "self",
            as: "dev-goldfish-control",
            rights: [ "r*" ],
        },
        {
            directory: "empty",
            from: "self",
            as: "dev-goldfish-address-space",
            rights: [ "r*" ],
        },
        {
            directory: "empty",
            from: "self",
            as: "dev-goldfish-sync",
            rights: [ "r*" ],
        },
        {
            directory: "empty",
            from: "self",
            as: "dev-gpu-dependency-injection",
            rights: [ "r*" ],
        },
    ],
}

import("//build/components.gni")

executable("bin") {
  testonly = true
  output_name = "rpmb-integration-test"
  sources = [ "rpmb-integration-test.cc" ]
  deps = [
    "//sdk/fidl/fuchsia.hardware.rpmb:fuchsia.hardware.rpmb_cpp",
    "//sdk/lib/async:async-cpp",
    "//sdk/lib/async-loop:async-loop-cpp",
    "//sdk/lib/component/incoming/cpp",
    "//sdk/lib/fit",
    "//sdk/lib/fit-promise",
    "//sdk/lib/syslog/cpp",
    "//src/lib/fxl/test:gtest_main",
    "//zircon/system/ulib/zx",
  ]
}

fuchsia_test_component("component") {
  deps = [ ":bin" ]
  manifest = "meta/rpmb-integration-test.cml"
  test_type = "device"
}

fuchsia_test_package("rpmb-integration-test") {
  test_components = [ ":component" ]
  test_specs = {
    environments = [
      nelson_env,
      sherlock_env,

      # TODO(435721211): Fix RPMB on Sorrel and re-enable.
      # sorrel_env,
    ]
  }
}

group("tests") {
  testonly = true
  deps = [ ":rpmb-integration-test" ]
}

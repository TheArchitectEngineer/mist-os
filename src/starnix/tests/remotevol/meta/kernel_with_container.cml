{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    children: [
        {
            name: "kernel",
            url: "starnix_kernel#meta/starnix_kernel.cm",
        },
        {
            name: "debian_container",
            url: "debian#meta/debian_container_with_user_volume.cm",
            environment: "#starnix_kernel_env",
        },
    ],
    capabilities: [
        {
            directory: "fs_root",
            from: "#debian_container",
            rights: [ "rw*" ],
            path: "/fs_root",
        },
    ],
    offer: [
        {
            protocol: "fuchsia.kernel.VmexResource",
            from: "parent",
            to: "#kernel",
        },
        {
            directory: "boot-kernel",
            from: "parent",
            to: "#kernel",
        },
        {
            storage: "data",
            from: "parent",
            to: [ "#debian_container" ],
        },
        {
            protocol: "fuchsia.fshost.StarnixVolumeProvider",
            from: "parent",
            to: "#debian_container",
        },
    ],
    expose: [
        {
            directory: "fs_root",
            from: "#debian_container",
        },
    ],
    environments: [
        {
            name: "starnix_kernel_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix",
                    from: "#kernel",
                },
            ],
        },
    ],
}

{
    include: [
        "inspect/client.shard.cml",
        "syslog/client.shard.cml",
    ],
    children: [
        {
            name: "kernel",
            url: "starnix_kernel#meta/starnix_kernel.cm",
        },
        {
            name: "thermal_container",
            url: "#meta/thermal_container.cm",
            environment: "#starnix_kernel_env",
        },
        {
            name: "thermal_client",
            url: "#meta/thermal_client.cm",
            environment: "#starnix_container_env",
        },
    ],
    offer: [
        {
            protocol: [ "fuchsia.kernel.VmexResource" ],
            from: "parent",
            to: "#kernel",
        },
        {
            directory: "boot-kernel",
            from: "parent",
            to: "#kernel",
        },
    ],
    expose: [
        {
            protocol: [ "fuchsia.component.Binder" ],
            from: "#thermal_client",
        },
    ],
    environments: [
        {
            name: "starnix_kernel_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix",
                    from: "#kernel",
                },
            ],
        },
        {
            name: "starnix_container_env",
            extends: "realm",
            runners: [
                {
                    runner: "starnix_container",
                    from: "#thermal_container",
                },
            ],
        },
    ],
}

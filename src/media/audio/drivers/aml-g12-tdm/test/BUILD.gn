fuchsia_unittest_package("stream-test-package") {
  package_name = "aml-g12-tdm-test"
  deps = [ ":aml-g12-tdm-test-bin" ]
  test_specs = {
    environments = basic_envs
    log_settings = {
      max_severity = "ERROR"
    }
  }
}


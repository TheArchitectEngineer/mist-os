test("aml-g12-composite-test-bin") {
  sources = [ "composite-test.cc" ]
  deps = [
    "..:aml-g12-composite-common",
    "//sdk/lib/async_patterns/testing/cpp",
    "//sdk/lib/driver/fake-bti/cpp",
    "//sdk/lib/driver/incoming/cpp",
    "//sdk/lib/driver/testing/cpp",

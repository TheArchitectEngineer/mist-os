import("//build/components.gni")
import("//build/rust/rustc_binary.gni")

rustc_binary("bin") {
  name = "topology_test_daemon"
  edition = "2018"
  with_unit_tests = true
  testonly = true

  deps = [
    "//sdk/fidl/fuchsia.component:fuchsia.component_rust",
    "//sdk/fidl/fuchsia.component.decl:fuchsia.component.decl_rust",
    "//sdk/fidl/fuchsia.power.broker:fuchsia.power.broker_rust",
    "//sdk/fidl/fuchsia.power.topology.test:fuchsia.power.topology.test_rust",
    "//sdk/rust/zx",
    "//src/lib/diagnostics/inspect/runtime/rust",
    "//src/lib/diagnostics/inspect/rust",
    "//src/lib/fidl/rust/fidl",
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-async",
    "//src/lib/fuchsia-component",
    "//src/power/broker/client",
    "//src/power/testing/topology-test-daemon/power-element-runner/fidl:test.powerelementrunner_rust",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:log",
  ]

  sources = [
    "src/main.rs",
    "src/topology_test_daemon.rs",
  ]
}

fuchsia_component_manifest("manifest") {
  manifest = "meta/topology-test-daemon.cml"
  component_name = "topology-test-daemon"
}

fuchsia_component("component") {
  testonly = true
  cm_label = ":manifest"
  deps = [
    ":bin",
    "//src/power/testing/topology-test-daemon/power-element-runner:component",
  ]
}

fuchsia_package("package") {
  testonly = true
  package_name = "topology-test-daemon"
  deps = [ ":component" ]
}

group("tests") {
  testonly = true
  deps = [ "tests" ]
}

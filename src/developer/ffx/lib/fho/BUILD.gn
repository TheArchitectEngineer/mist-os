import("//build/rust/rustc_library.gni")

assert(is_host, "The fho framework is for host tools only")

rustc_library("lib") {
  name = "fho"
  version = "0.1.0"
  edition = "2021"
  with_unit_tests = true

  deps = [
    "macro:lib",
    "//src/developer/ffx/command:lib",
    "//src/developer/ffx/command/error:lib",
    "//src/developer/ffx/config:lib",
    "//src/developer/ffx/core:lib",
    "//src/developer/ffx/lib/fho/metadata:lib",
    "//src/developer/ffx/lib/target:lib",
    "//src/developer/lib/writer:lib",
    "//third_party/rust_crates:anyhow",
    "//third_party/rust_crates:argh",
    "//third_party/rust_crates:async-lock",
    "//third_party/rust_crates:async-trait",
    "//third_party/rust_crates:futures",
    "//third_party/rust_crates:mockall",
    "//third_party/rust_crates:serde",
    "//third_party/rust_crates:serde_json",
    "//third_party/rust_crates:tracing",
  ]

  test_deps = [
    "//src/lib/fuchsia",
    "//src/lib/fuchsia-async",
    "//third_party/rust_crates:tempfile",
  ]

  sources = [
    "src/adapters.rs",
    "src/connector.rs",
    "src/fho_env.rs",
    "src/from_env.rs",
    "src/lib.rs",
    "src/subtool.rs",
    "src/try_from_env.rs",
  ]
}

group("tests") {
  testonly = true
  deps = [
    ":lib_test",
    "macro:lib_test",
    "metadata:lib_test",
  ]
}

group("fho") {
  testonly = true
  deps = [
    ":lib",
    ":tests",
  ]
}

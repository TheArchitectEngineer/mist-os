    "src/connection.rs",
    "src/fdomain_transport.rs",
    "src/fidl_pipe.rs",
    "src/lib.rs",
    "src/resolve.rs",
    "src/ssh_connector.rs",
    "src/target_connector.rs",
  ]
}

group("tests") {
  testonly = true
  deps = [ ":lib_test" ]
}

group("target") {
  deps = [ ":lib" ]
}

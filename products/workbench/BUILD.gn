import("//build/bazel/assembly/bazel_product_bundle.gni")
import("//products/workbench/product_bundles.gni")

# A GN target to perform system assembly in Bazel exclusively, using
# Ninja-generated inputs.

foreach(_pb, WORKBENCH_PRODUCT_BUNDLES) {
  bazel_product_bundle(_pb.gn_target_name) {
    forward_variables_from(_pb, "*")
  }
}

  assemble_network_conformance_system("network-conformance-base") {
    additional_base_packages = []
  }
}

if (is_host) {
  host_test_data("network-conformance-base-test-data") {
    out_dir = get_label_info(":anything($target_toolchain)", "target_out_dir")

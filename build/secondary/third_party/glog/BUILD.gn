config("glog_config") {
  visibility = [ ":*" ]
  include_dirs = [ "src/src" ]
  cflags = [ "-Wno-conversion" ]
}

static_library("glog") {
  sources = [
    "src/src/demangle.cc",
    "src/src/logging.cc",
    "src/src/raw_logging.cc",
    "src/src/signalhandler.cc",
    "src/src/symbolize.cc",
    "src/src/utilities.cc",
    "src/src/vlog_is_on.cc",
  ]
  configs += [ "//build/config:Wno-extra-semi" ]
  public_configs = [ ":glog_config" ]
  deps = [ "//third_party/gflags" ]

  if (current_os == "linux") {
    defines = [ "HAVE_SYSCALL_H" ]
    cflags_cc = [ "-Wno-sign-compare" ]
  }
}
